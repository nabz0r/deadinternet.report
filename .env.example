# ============================================
# deadinternet.report - Environment Variables
# ============================================
# cp .env.example .env && edit with your values

# ---- General ----
DEBUG=false

# ---- PostgreSQL ----
POSTGRES_USER=deadinet
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=deadinternet

# ---- Auth (NextAuth.js) ----
# Generate with: openssl rand -base64 32
NEXTAUTH_URL=https://deadinternet.report
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# REQUIRED: JWT secret for backend token verification (must match NEXTAUTH_SECRET)
# Generate with: openssl rand -hex 32
JWT_SECRET=generate-with-openssl-rand-hex-32

# REQUIRED: Internal secret for server-to-server calls (NextAuth -> FastAPI)
# Generate with: openssl rand -hex 32
INTERNAL_API_SECRET=generate-with-openssl-rand-hex-32

# Google OAuth (https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth (https://github.com/settings/developers)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ---- Stripe (https://dashboard.stripe.com/test/apikeys) ----
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Create products & prices in Stripe Dashboard
NEXT_PUBLIC_STRIPE_PRICE_HUNTER=price_...
NEXT_PUBLIC_STRIPE_PRICE_OPERATOR=price_...
STRIPE_PRICE_HUNTER=price_...
STRIPE_PRICE_OPERATOR=price_...

# ---- Anthropic (https://console.anthropic.com/settings/keys) ----
ANTHROPIC_API_KEY=sk-ant-...

# ---- Infrastructure ----
REDIS_URL=redis://redis:6379/0
API_URL=http://backend:8000
NEXT_PUBLIC_API_URL=http://localhost:8000

# ---- Ports ----
HTTP_PORT=80
HTTPS_PORT=443

# ---- Redis ----
REDIS_PASSWORD=changeme

# ---- Rate Limits (scans/day) ----
SCAN_RATE_FREE=0
SCAN_RATE_HUNTER=10
SCAN_RATE_OPERATOR=1000

# ---- IP Rate Limiting ----
IP_RATE_LIMIT=60
IP_RATE_WINDOW=60

# ---- Cache TTL (seconds) ----
STATS_CACHE_TTL=3600
SCAN_CACHE_TTL=86400
